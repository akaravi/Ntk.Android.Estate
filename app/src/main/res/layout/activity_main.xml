<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/base_toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title1"
            style="@style/main_activity_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="املاک پیشنهادی" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc1"
            android:layout_width="match_parent"
         android:nestedScrollingEnabled="true"   android:layout_height="wrap_content"
           />

        <TextView
            android:id="@+id/title2"
            style="@style/main_activity_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="محبوب ترین املاک"
            android:textColor="@color/colorTextPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc2"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="true"        android:layout_height="wrap_content"
           />

        <TextView
            android:id="@+id/title3"
            style="@style/main_activity_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="املاک ویژه" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc3"
            android:nestedScrollingEnabled="true"        android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />

        <TextView
            android:id="@+id/title4"
            style="@style/main_activity_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اجاره روزانه" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc4"
            android:nestedScrollingEnabled="true"      android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>