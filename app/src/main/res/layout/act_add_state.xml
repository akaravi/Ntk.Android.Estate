<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnActAddState"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:text="ادامـــه"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnActAddState"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/TxtTitleActAddState"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_edittext"
                android:hint="عنوان آگهی"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <EditText
                android:id="@+id/TxtDescriptionActAddState"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_edittext"
                android:gravity="right|top"
                android:hint="توضیحات آگهی"
                android:inputType="textMultiLine"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/SpinnerTypePriceActAddState"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorAccent" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/SpinnerTypeStateActAddState"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorAccent" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/SpinnerLocationActAddState"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorAccent" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/SpinnerTypeOrderActAddState"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardRowImage1ActAddState"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progress1ActAddState"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="15dp"
                            android:indeterminate="true" />

                        <ImageView
                            android:id="@+id/imgPlus1ActAddState"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:alpha=".5"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_camera" />

                        <ImageView
                            android:id="@+id/img1ActAddState"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardImage2ActAddState"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progress2ActAddState"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="15dp"
                            android:indeterminate="true" />

                        <ImageView
                            android:id="@+id/imgPlus2ActAddState"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:alpha=".5"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_camera" />

                        <ImageView
                            android:id="@+id/img2ActAddState"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardRowImage3ActAddState"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progress3ActAddState"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="15dp"
                            android:indeterminate="true" />

                        <ImageView
                            android:id="@+id/imgPlus3ActAddState"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:alpha=".5"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_camera" />

                        <ImageView
                            android:id="@+id/img3ActAddState"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardRowImage4ActAddState"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progress4ActAddState"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="15dp"
                            android:indeterminate="true" />

                        <ImageView
                            android:id="@+id/imgPlus4ActAddState"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:alpha=".5"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_camera" />

                        <ImageView
                            android:id="@+id/img4ActAddState"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <EditText
                android:id="@+id/TxtBuildingAreaActAddState"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_edittext"
                android:hint="متراژ بنا"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <EditText
                android:id="@+id/TxtPriceActAddState"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_edittext"
                android:hint="قیمت"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <EditText
                android:id="@+id/TxtNumberRoomActAddState"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_edittext"
                android:hint="تعداد اتاق"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <EditText
                android:id="@+id/TxtYearOfConstructionActAddState"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_edittext"
                android:hint="سال ساخت"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <EditText
                android:id="@+id/TxtDepositActAddState"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_edittext"
                android:hint="ودیعه"
                android:inputType="number"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <EditText
                android:id="@+id/TxtRentActAddState"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_edittext"
                android:hint="اجاره"
                android:inputType="number"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>