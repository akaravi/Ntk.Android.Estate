<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarColorText">@color/toolbarColorText</item>
        <item name="toolbarColorBackground">@color/toolbarColorBackground</item>
        <item name="colorTextPrimary">@color/colorTextPrimary</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>
        <item name="ntk_base_logo">@drawable/logo</item>
        <item name="ntk_splash_background">@drawable/splash</item>
        <item name="ntk_splash_lottie_loading">@raw/loading</item>
        <item name="ntk_splash_lottie_logo">@raw/loading</item>
        <item name="ntk_splash_logo">@drawable/logo</item>
        <item name="ntk_notification_color">@color/colorWhite</item>
        <item name="Theme_NTK_Intro">@style/AppTheme</item>
        <item name="Theme_NTK_Register">@style/AppTheme</item>
        <item name="Theme_NTK_Poll_Detail">@style/AppTheme</item>
        <item name="Theme_NTK_Notification">@style/AppTheme</item>
        <item name="Theme_NTK_Fag">@style/AppTheme</item>
        <item name="Theme_NTK_Ticket_Answer">@style/AppTheme</item>
        <item name="Theme_NTK_Ticket_Search">@style/AppTheme</item>
        <item name="Theme_NTK_Ticket_List">@style/AppTheme</item>
        <item name="Theme_NTK_Faq_Search">@style/AppTheme</item>

    </style>


    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="estate_detail_title_text"></style>

    <style name="main_activity_Title">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="new_estate_cardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="contentPaddingBottom">8dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="cardElevation">16dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>


    <style name="new_estate_textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="new_estate_textInputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="new_estate_padding">
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="new_estate_title">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="search_estate_padding">
        <item name="android:layout_marginRight">64dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/dash_line</item>
        <item name="android:layout_marginLeft">32dp</item>
    </style>

    <style name="search_estate_cardView">
        <item name="android:layout_margin">18dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">15dp</item>
    </style>

    <style name="search_estate_arrow">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:padding">4dp</item>
        <item name="tint">@color/colorAccent</item>
        <item name="srcCompat">@drawable/ic_arrow_rotate</item>
    </style>

    <style name="search_estate_title">
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="search_estate_textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="search_estate_spinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
</resources>
